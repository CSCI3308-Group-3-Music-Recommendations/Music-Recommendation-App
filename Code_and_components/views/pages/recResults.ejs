<%- include ('../partials/header') %>
<%- include ('../partials/menu1') %>


<main>
    <div class="container">
        <h2>Search Results:</h2>
        <table class="table table-hover">
        <%
        if (tracks)
        { %>
            <thead>
                <th scope="col">Name</th>
                <th scope="col">Artist</th>
                <th scope="col">Listens</th>
            </thead>
           <% for (let track of tracks){ %>
                <tr>
                    <td id="track-name">
                        <%=track.name%>
                    </td>
                    <td id="track-artist">
                        <%=track.artist.name%>
                    </td>
                    <td id="track-plays">
                        <%=track.playcount%>
                    </td>
                </tr>
           <% }
        }  
        else
        { %>
            <h2>Sorry! That Song has no Results</h2>
       <% }   
        %>
        </table>
    </div>
</main>


<%- include ('../partials/footer') %>