<%- include ('../partials/header') %>
<%- include ('../partials/menu1') %>


<main>
    <div class="container">
        <h2>Search Results:</h2>
        <table class="table table-hover">
        <%
        if (tracks)
        { %>
            <thead>
                <th scope="col">Name</th>
                <th scope="col">Artist</th>
                <th scope="col">Album</th>
                <th scope="col">Image</th>
                <th scope="col">Preview</th>
            </thead>
           <% for (let track of tracks){ %>
                <tr>
                    <td id="track-name">
                        <%=track.name%>
                    </td>
                    <td id="track-artist">
                        <%=track.artists[0].name%>
                    </td>
                    <td>
                        <%=track.album.name%>
                    </td>
                    <td>
                        <img src="<%=track.album.images[1].url%>" height="150" width="150" alt="Track Image">
                    </td>
                    <<td class="text-center fs-5">
                        <a href="<%=track.preview_url%>" role="button" class="btn btn-primary">Preview Song</a>
                    </td>
                </tr>
           <% }
        }  
        else
        { %>
            <h2>Sorry! That Song has no Results</h2>
       <% }   
        %>
        </table>
    </div>
</main>


<%- include ('../partials/footer') %>