<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>



<main>
    <div class="container">
        <form action="/searchSong" method="get">
            <div class="mb-4">
                <label class="form-label" for="InputSong">Type a song to get similar recommendations</label>
                <input type="text" name="InputSong" class="form-control" id="InputSong" />
            </div>  
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </form>
        <table class="table table-dark table-hover">
        <%
        if (tracks)
        { %>
            <thead>
                <th scope="col">Name</th>
                <th scope="col">Artist</th>
                <th scope="col"></th>
            </thead>
           <% for (let track of tracks){ %>
                <tr>
                    <td id="track-name">
                        <%=track.name%>
                    </td>
                    <td id="track-artist">
                        <%=track.artist%>
                    </td>
                    <td>
                        <button class="btn btn-primary" onclick="recommendSong()">Get Recommendations</button>
                    </td>
                </tr>
           <% }
        }     
        %>
        </table>
    </div>
</main>

<script src="Code_and_components\src\resources\js\recommend.js"></script>

<%- include ('../partials/footer') %>